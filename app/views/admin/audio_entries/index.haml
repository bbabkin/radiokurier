-@page_title = "Admin | Выпуски"
#audio-wrap
  %section{:id => 'audio', :class => 'player'}
  #player-close.glyphicon.glyphicon-remove
%h2 выпуски
= link_to('добавить выпуск', {:action => 'new'}, :class => 'btn btn-xs btn-warning action new')
%table.admin-table{:summary => "Audio Clip List"}
  %tr
    %th дата
    %th название
    %th действия
  - @audio_entries.each do |audio_entry|
    %tr
      %td= audio_entry.date.strftime("%b %d, %Y")
      %td= audio_entry.title
      %td.actions
        = link_to'правка', {:action => 'edit', :id => audio_entry.id}, class: 'btn btn-xs btn-warning'
        = link_to 'прослушать', audio_entry.permalink.url, class: "btn btn-xs btn-primary html5"
        = link_to"удалить", {:action => 'delete', :id => audio_entry.id}, class: "btn btn-xs btn-danger", confirm: "уверены?"

